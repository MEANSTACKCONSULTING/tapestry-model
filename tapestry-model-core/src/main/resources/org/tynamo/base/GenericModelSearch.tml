<t:if test="searchfiltersAvailable" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
<div id="filters">
	<style>
		#filters li:empty {
			display: none;
		}
	</style>
	<h3>Filter</h3>
	<t:form t:id="searchFilterForm">
		<t:tynamo.searchFilters descriptorMap="displayableFilterDescriptorMap"/>
		<input type="submit" class="btn btn-default" value="Filter results"/>
	</t:form>
</div>
</t:if>